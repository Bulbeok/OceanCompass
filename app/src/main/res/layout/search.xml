<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/search_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"
        tools:context=".SearchActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/bottom_navigation_view"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp"
            android:background="@drawable/search_background"
            >

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/local"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="36dp"
                    android:layout_marginTop="48dp"
                    android:text="지역"
                    android:textColor="#535353"
                    android:textSize="35sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <Button
                    android:id="@+id/input_local"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="36dp"
                    android:layout_marginTop="24dp"
                    android:background="#D0FDFDFD"
                    android:gravity="left|center_vertical"
                    android:hint="지역을 입력해주세요."
                    android:paddingLeft="10dp"
                    android:textColor="#646464"
                    android:textColorHint="#535353"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/act"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                app:layout_constraintBottom_toTopOf="@+id/time"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/local">

            <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="36dp"
                    android:layout_marginTop="24dp"
                    android:text="놀거리"
                    android:textColor="#535353"
                    android:textSize="35sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <Button
                    android:id="@+id/input_play"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="36dp"
                    android:layout_marginTop="28dp"
                    android:background="#D0FDFDFD"
                    android:gravity="left|center_vertical"
                    android:hint="ex) 스킨스쿠버, 낚시, 박물관"
                    android:paddingLeft="10sp"
                    android:textColor="#D5666666"
                    android:textColorHint="#535353"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView3"
                    app:layout_constraintVertical_bias="0.0" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                app:layout_constraintBottom_toTopOf="@+id/tour_search"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/act">

            <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:text="여행기간"
                    android:textColor="#535353"
                    android:textSize="35sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <Button
                    android:id="@+id/day1"
                    android:layout_width="69dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="20dp"
                    android:background="#FFFFFF"
                    android:text="1일"
                    android:textColor="#535353"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <Button
                    android:id="@+id/day2"
                    android:layout_width="69dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="16dp"
                    android:background="#FFFFFF"
                    android:text="1박2일"
                    android:textColor="#535353"
                    app:layout_constraintStart_toEndOf="@+id/day1"
                    app:layout_constraintTop_toTopOf="@+id/day1" />

            <Button
                    android:id="@+id/day3"
                    android:layout_width="69dp"
                    android:layout_height="45dp"
                    android:background="#FFFFFF"
                    android:text="2박3일"
                    android:textColor="#535353"
                    app:layout_constraintEnd_toStartOf="@+id/day4"
                    app:layout_constraintStart_toEndOf="@+id/day2"
                    app:layout_constraintTop_toTopOf="@+id/day2" />

            <Button
                    android:id="@+id/day4"
                    android:layout_width="69dp"
                    android:layout_height="45dp"
                    android:layout_marginEnd="40dp"
                    android:background="#FFFFFF"
                    android:text="3박4일"
                    android:textColor="#535353"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/day3" />

            <Button
                    android:id="@+id/day5"
                    android:layout_width="69dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="12dp"
                    android:background="#FFFFFF"
                    android:text="4박5일"
                    android:textColor="#535353"
                    app:layout_constraintStart_toStartOf="@+id/day1"
                    app:layout_constraintTop_toBottomOf="@+id/day1" />

            <Button
                    android:id="@+id/day6"
                    android:layout_width="69dp"
                    android:layout_height="45dp"
                    android:background="#FFFFFF"
                    android:text="5박6일"
                    android:textColor="#535353"
                    app:layout_constraintEnd_toEndOf="@+id/day2"
                    app:layout_constraintStart_toStartOf="@+id/day2"
                    app:layout_constraintTop_toTopOf="@+id/day5" />

            <Button
                    android:id="@+id/day7"
                    android:layout_width="69dp"
                    android:layout_height="45dp"
                    android:background="#FFFFFF"
                    android:text="6박7일"
                    android:textColor="#535353"
                    app:layout_constraintEnd_toEndOf="@+id/day3"
                    app:layout_constraintStart_toStartOf="@+id/day3"
                    app:layout_constraintTop_toTopOf="@+id/day6" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
                android:id="@+id/tour_search"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/colorPrimary"
                android:text="여행지 검색"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintVertical_weight="1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="?android:attr/windowBackground"
            app:itemIconTint="@drawable/selector"
            app:layout_behavior="tech.thdev.app.view.BottomNavigationBehavior"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:menu="@menu/bottom_nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>