<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:background="#DBD8D8"
>
    <EditText
            android:layout_width="179dp"
            android:layout_height="46dp"
            android:inputType="textPostalAddress"
            android:ems="10"
            android:id="@+id/Email"
            android:textSize="20sp"
            android:background="#FFFFFF"
            android:layout_marginLeft="132dp" android:layout_marginStart="132dp" android:layout_marginTop="72dp"
            app:layout_constraintTop_toTopOf="parent" android:textColor="#222222"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="아이디"
            android:layout_width="131dp"
            android:layout_height="46dp"
            android:id="@+id/EmailText"
            android:textSize="20sp"
            android:gravity="center"
            android:background="#FFFFFF"
            android:layout_marginTop="72dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="#000000"/>
    <EditText
            android:layout_width="179dp"
            android:layout_height="46dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/Password"
            android:textSize="20sp"
            android:layout_marginLeft="132dp" android:layout_marginStart="132dp" android:layout_marginTop="124dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="@+id/PasswordText"
            android:background="#FFFFFF" android:textColor="#00303030"/>
    <TextView
            android:text="비밀번호"
            android:layout_width="130dp"
            android:layout_height="46dp"
            android:id="@+id/PasswordText"
            android:textSize="20sp"
            android:gravity="center"
            android:background="#FDFCFC"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="124dp"
            app:layout_constraintTop_toTopOf="parent" android:textColor="#000000"/>
    <Button
            android:text="로그인"
            android:layout_width="283dp"
            android:layout_height="53dp"
            android:id="@+id/Login_Button"
            android:textSize="25sp"
            android:background="#E42317"
            android:textColor="#F1F1F1"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/PasswordText"/>
    <Button
            android:text="회원가입"
            android:layout_width="283dp"
            android:layout_height="53dp"
            android:id="@+id/Sign_upbutton"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/Login_Button" android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:text="로그인"
            android:layout_width="313dp"
            android:layout_height="42dp"
            android:id="@+id/textView2" android:textSize="30sp"
            android:gravity="center"
            android:textColor="#000000"
            android:background="#FFFFFF" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>