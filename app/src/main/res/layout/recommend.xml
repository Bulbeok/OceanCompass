<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"
        tools:context=".RecommendActivity"
        android:background="#ffffff">

    <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:id="@+id/day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="#002DE5EB"
                    android:gravity="left|center_vertical"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="#353535"
                    android:textSize="35sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <TextView
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:background="#002DE5EB"
                    android:gravity="left|center_vertical"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="#353535"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/option1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/searchadd_stroke1">

            <ImageView
                    android:id="@+id/number1"
                    android:layout_width="53dp"
                    android:layout_height="52dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@mipmap/ic_launcher_tour" />

            <TextView
                    android:id="@+id/type1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:text="놀거리1"
                    android:textColor="#353535"
                    android:textSize="20sp"
                    app:layout_constraintStart_toEndOf="@+id/number1"
                    app:layout_constraintTop_toTopOf="parent" />

            <TextView
                    android:id="@+id/type2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="44dp"
                    android:text="놀거리2"
                    android:textColor="#353535"
                    android:textSize="20sp"
                    app:layout_constraintStart_toEndOf="@+id/type1"
                    app:layout_constraintTop_toTopOf="@+id/type1" />

            <TextView
                    android:id="@+id/type3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="56dp"
                    android:text="중식"
                    android:textColor="#353535"
                    android:textSize="20sp"
                    app:layout_constraintStart_toEndOf="@+id/type2"
                    app:layout_constraintTop_toTopOf="@+id/type2" />

            <TextView
                    android:id="@+id/type4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="15dp"
                    android:text="놀거리3"
                    android:textColor="#353535"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/type1"
                    app:layout_constraintTop_toBottomOf="@+id/type1"
                    app:layout_constraintVertical_bias="0.0" />

            <TextView
                    android:id="@+id/type5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="석식"
                    android:textColor="#353535"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="@+id/type2"
                    app:layout_constraintTop_toTopOf="@+id/type4" />

            <TextView
                    android:id="@+id/type6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="숙소"
                    android:textColor="#353535"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="@+id/type3"
                    app:layout_constraintTop_toTopOf="@+id/type4" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/option2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/searchadd_stroke1">

            <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="53dp"
                    android:layout_height="52dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@mipmap/ic_launcher_tour" />

            <TextView
                    android:id="@+id/type7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:text="놀거리1"
                    android:textColor="#353535"
                    android:textSize="20sp"
                    app:layout_constraintStart_toEndOf="@+id/imageView3"
                    app:layout_constraintTop_toTopOf="parent" />

            <TextView
                    android:id="@+id/type8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="44dp"
                    android:text="놀거리2"
                    android:textColor="#353535"
                    android:textSize="20sp"
                    app:layout_constraintStart_toEndOf="@+id/type7"
                    app:layout_constraintTop_toTopOf="@+id/type7" />

            <TextView
                    android:id="@+id/type9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="56dp"
                    android:text="중식"
                    android:textColor="#353535"
                    android:textSize="20sp"
                    app:layout_constraintStart_toEndOf="@+id/type8"
                    app:layout_constraintTop_toTopOf="@+id/type8" />

            <TextView
                    android:id="@+id/type10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="15dp"
                    android:text="놀거리3"
                    android:textColor="#353535"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/type7"
                    app:layout_constraintTop_toBottomOf="@+id/type7"
                    app:layout_constraintVertical_bias="0.0" />

            <TextView
                    android:id="@+id/type11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="석식"
                    android:textColor="#353535"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="@+id/type8"
                    app:layout_constraintTop_toTopOf="@+id/type10" />

            <TextView
                    android:id="@+id/type12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="숙소"
                    android:textColor="#353535"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="@+id/type9"
                    app:layout_constraintTop_toTopOf="@+id/type10" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <WebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/complete"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <Button
            android:id="@+id/complete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/all_complete"
            app:layout_constraintStart_toStartOf="parent" />

    <Button
            android:id="@+id/all_complete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="완성"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/complete"
            app:layout_constraintTop_toTopOf="@+id/complete" />

</androidx.constraintlayout.widget.ConstraintLayout>