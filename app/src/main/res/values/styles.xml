<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="HomeTheme" parent="Theme.AppCompat.NoActionBar">
        <item name ="android:windowBackground">@drawable/home_background1</item>
    </style>
    <style name = "SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name = "android:windowBackground">@drawable/splash_background</item>
    </style>
    <style name = "ReviewTheme" parent = "Theme.AppCompat.NoActionBar">
        <item name = "android:windowBackground">@drawable/home_background1</item>
    </style>
    <style name = "SearchTheme" parent ="Theme.AppCompat.Light">
        <item name = "android:windowBackground">@drawable/search_background</item>
    </style>

    <style name="FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>
